<div class="container">
    <div class="row">
      <%- @categories.each do |category| %>
      <div class="col-md-12">
        <h3><%= link_to category.title, category %></h3>

        <%- category.books.each do |book| %>
        <div class="col-md-4 product-item">
          <p><%= link_to book.title, book %></p>
          <p><img src="<%= book.photo.product_view %>" ></p>
          <p>Price: <%= book.price %> $</p>
        </div>
        <%- end %>

      </div>
      <%- end %>
    </div>
</div>
