<div class="container">
    <div class="row">

      <div class="col-md-12">
        <h3><%= @category.title %></h3>

        <%- @category.books.each do |book| %>
        <div class="col-md-4 product-item">
          <h3><%= link_to book.title, book %></h3>
          <p><img src="<%= book.photo.product_view %>" /></p>
          <p class="carousel_description"><strong>Description:</strong> <%= book.description %></p>
          <p><strong>Author:</strong> <%= book.author.name %></p>
          <p><strong>Price:</strong> <%= book.price %></p>
        </div>
        <%- end %>

      </div>

    </div>
</div>